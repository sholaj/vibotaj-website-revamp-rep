# Example environment file for production secrets
# Copy to .env.production and fill in real values
# NEVER commit this file with real credentials!

# Production Database
PROD_DB_URL=postgresql://username:password@hostname:5432/dbname

# JWT Secret (generate with: openssl rand -hex 32)
PROD_JWT_SECRET=your-secure-64-character-hex-string-here

# Docker Hub (for image publishing)
DOCKERHUB_USERNAME=your-dockerhub-username
DOCKERHUB_TOKEN=your-dockerhub-access-token

# Codecov (optional - for coverage reports)
CODECOV_TOKEN=your-codecov-token

# Azure (if using Azure deployment)
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
