# TraceHub Staging Environment Configuration
# Copy this to .env.staging and fill in the values

# Environment
ENVIRONMENT=staging

# Database Configuration
DB_USER=tracehub_staging
DB_PASSWORD=change-this-secure-password
DB_NAME=tracehub_staging
DB_PORT=5532

# Application Secrets
JWT_SECRET=change-this-jwt-secret-key-min-32-chars
DEMO_PASSWORD=change-this-demo-password

# External APIs
VIZION_API_KEY=your-vizion-api-key-here

# CORS Settings
CORS_ORIGINS=https://staging.tracehub.vibotaj.com,http://localhost:3000

# Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Docker Image Tags (set by CI/CD)
DOCKER_BACKEND_IMAGE=ghcr.io/your-org/tracehub-backend:develop-latest
DOCKER_FRONTEND_IMAGE=ghcr.io/your-org/tracehub-frontend:develop-latest

# Port Configuration
BACKEND_PORT=8100
FRONTEND_PORT=3100
