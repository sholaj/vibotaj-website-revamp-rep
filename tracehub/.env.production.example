# TraceHub Production Environment Configuration
# Copy this to .env.production and fill in the values
# NEVER commit this file with real secrets!

# Environment
ENVIRONMENT=production

# Database Configuration
DB_USER=tracehub
DB_PASSWORD=use-very-strong-password-here
DB_NAME=tracehub
DB_PORT=5432

# Application Secrets
JWT_SECRET=use-strong-jwt-secret-at-least-32-characters-long
DEMO_PASSWORD=secure-production-password

# External APIs
VIZION_API_KEY=production-vizion-api-key

# CORS Settings
CORS_ORIGINS=https://tracehub.vibotaj.com

# Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Docker Image Tags (set by CI/CD)
DOCKER_BACKEND_IMAGE=ghcr.io/your-org/tracehub-backend:main-latest
DOCKER_FRONTEND_IMAGE=ghcr.io/your-org/tracehub-frontend:main-latest

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
