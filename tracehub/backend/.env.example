# TraceHub Backend Configuration

# Database
DATABASE_URL=postgresql://tracehub:tracehub@localhost:5432/tracehub

# Debug mode (set to false in production)
DEBUG=true

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Vizion API (Container Tracking)
VIZION_API_KEY=your-vizion-api-key
VIZION_API_URL=https://api.vizionapi.com/v2

# File uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
