# TraceHub Backend Configuration

# Database
DATABASE_URL=postgresql://tracehub:tracehub@localhost:5432/tracehub

# Debug mode (set to false in production)
DEBUG=true

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Container Tracking API (JSONCargo)
# Get API key from: https://jsoncargo.com/
JSONCARGO_API_KEY=your-jsoncargo-api-key

# AI Document Classification (Anthropic Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# File uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50
STORAGE_BACKEND=local  # "local" for dev, "supabase" for prod/staging

# Supabase Storage (PRD-005) â€” required when STORAGE_BACKEND=supabase
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
